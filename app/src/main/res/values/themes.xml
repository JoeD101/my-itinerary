<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyItinerary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0D3C7B</item>
        <item name="colorPrimaryVariant">#0D3C7B</item>
        <item name="colorOnPrimary">#0D3C7B</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#0D3C7B</item>
        <item name="colorSecondaryVariant">#0D3C7B</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="Theme.MyItinerary.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyItinerary.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyItinerary.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>