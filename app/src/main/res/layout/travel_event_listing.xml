<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/travel_event_listing"
    android:layout_width="350dp"
    android:layout_height="100dp"
    android:layout_marginStart="15dp"

    android:layout_marginEnd="15dp"
    android:background="@drawable/border_rectangle"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/travel_event_date"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="Date - Date"
        app:layout_constraintBaseline_toBaselineOf="@+id/airport1"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/airport1"
        android:layout_width="252dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:padding="15dp"
        android:text="Airport1 Name"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/airport2"
        android:layout_width="252dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Airport2 Name"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="50dp" />

</androidx.constraintlayout.widget.ConstraintLayout>