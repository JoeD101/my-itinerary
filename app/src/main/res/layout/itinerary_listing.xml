<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/itinerary_listing"
    android:layout_width="350dp"
    android:layout_height="100dp"
    android:background="@drawable/border_rectangle"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"

    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/itin_date"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_weight="2"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="Date - Date"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/itin_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_weight="3"
        android:gravity="center"
        android:padding="15dp"
        android:text="Itinerary Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itin_date" />

</androidx.constraintlayout.widget.ConstraintLayout>